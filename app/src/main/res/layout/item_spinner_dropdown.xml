<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textview.MaterialTextView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tvItemSpinnerDropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="All"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@color/dark"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@+id/divider"
        android:background="@color/soft"
        app:layout_constraintTop_toBottomOf="@id/tvItemSpinnerDropdown"
        app:layout_constraintStart_toStartOf="@id/tvItemSpinnerDropdown"
        app:layout_constraintEnd_toEndOf="@id/tvItemSpinnerDropdown"
        android:layout_width="0dp"
        android:layout_height="2dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>