<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:backgroundTint="@color/soft"
    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgPoster2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="142dp"
            android:layout_height="180dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTitle2"
            android:text="Movie"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:maxLines="1"
            android:fontFamily="sans-serif"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/imgPoster2"
            app:layout_constraintTop_toTopOf="@id/imgPoster2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvGenres2"
            android:text="Action"
            android:textSize="16sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tvTitle2"
            app:layout_constraintStart_toStartOf="@id/tvTitle2"
            app:layout_constraintEnd_toEndOf="parent"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/imgStar"
            app:layout_constraintStart_toStartOf="@id/tvTitle2"
            app:layout_constraintTop_toBottomOf="@id/tvGenres2"
            android:src="@drawable/baseline_star_rate_24"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvRate2"
            android:text="5.0"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/imgStar"
            app:layout_constraintTop_toTopOf="@id/imgStar"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvReleaseDate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Release: 20-10-2023"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/imgStar"
            app:layout_constraintTop_toBottomOf="@id/imgStar" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>